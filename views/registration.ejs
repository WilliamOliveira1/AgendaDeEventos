<%- include('./partials/head') %>
<div class="container" id="loginPage">
  <div class="row" id="loginContainer">
    <h2 class="text-center">Sistema de Agendamento de eventos</h2>
    <div class="col">
      <form class="" name="loginForm" action="/login/save" method="POST">
        <div class="form-group m-2">
          <label class="m-2" for="InputEmail">Email</label>
          <input type="text" class="form-control" id="InputEmail" placeholder="Digite seu email" aria-describedby="emailHelp" name="email" required>
          <div style="margin-top: 7px;" id="CheckEmail"></div>
        </div>
        <div class="form-group m-2">
          <label class="m-2">Usuário</label>
          <input type="text" class="form-control" id="InputUser" placeholder="Digite o usuário" name="user" required>
          <div style="margin-top: 7px;" id="CheckUser"></div>
        </div>
        <div class="form-group m-2">
          <label class="m-2" for="InputPassword">Digite a senha</label>
          <input type="password" class="form-control" id="InputPassword" placeholder="Senha" name="password" required>
          <div style="margin-top: 7px;" id="CheckPasswordLenght"></div>
        </div>
        <div class="form-group m-2">
          <label class="m-2">Repita a senha</label>
          <input type="password" class="form-control" id="RepeatPassword" placeholder="Confirme a senha" required>
          <div style="margin-top: 7px;" id="CheckPasswordMatch"></div>
        </div>
        <button type="submit" id="RegisterButton" class="btn btn-primary m-2">Cadastrar</button>
        <p class="small fw-bold mb-2">Ja tem uma conta?<a href="/" class="link-danger m-1">Login</a></p>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer'); %>